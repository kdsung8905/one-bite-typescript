{
    "include": ["src"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "dist",


        //strict 옵션  상위 -> 하위
        "strict": true,
        //"strictNullChecks": false, // 엄격한 null 검사


        "skipLibCheck": true,
        "moduleDetection": "force" //타입스크립트 파일을 개별 모듈로 설정

    }
}